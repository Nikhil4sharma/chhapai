rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/user_roles/$(request.auth.uid + '_admin'));
    }
    
    // Profiles - authenticated users can read all, users can write their own, admins can write any
    // NOTE: Since app uses Supabase auth, we allow all reads/writes for now
    match /profiles/{userId} {
      allow read: if true; // Allow all reads for now (Supabase auth users)
      allow write: if true; // Allow all writes for now (Supabase auth users)
    }
    
    // User roles - authenticated users can read and write (needed for signup)
    // NOTE: Since app uses Supabase auth, we allow all reads/writes for now
    match /user_roles/{roleId} {
      allow read: if true; // Allow all reads for now (Supabase auth users)
      allow write: if true; // Allow all writes for now (Supabase auth users)
    }
    
    // Orders - authenticated users can read and create
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Order items - authenticated users can read and create
    match /order_items/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Order files - authenticated users can read and create
    match /order_files/{fileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Timeline - authenticated users can read and create
    match /timeline/{timelineId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Notifications - users can read their own, anyone can create
    // NOTE: Since app uses Supabase auth, we allow authenticated users to read/write
    match /notifications/{notificationId} {
      allow read: if true; // Allow all reads for now (Supabase auth users)
      allow create: if true; // Allow all creates for now (Supabase auth users)
      allow update, delete: if true; // Allow all updates/deletes for now (Supabase auth users)
    }
    
    // User settings - users can only access their own
    // NOTE: Since app uses Supabase auth, we allow authenticated users to read/write
    match /user_settings/{settingsId} {
      allow read: if true; // Allow all reads for now (Supabase auth users)
      allow create: if true; // Allow all creates for now (Supabase auth users)
      allow update: if true; // Allow all updates for now (Supabase auth users)
      allow delete: if true; // Allow all deletes for now (Supabase auth users)
    }
    
    // WooCommerce credentials - admin only (highly sensitive)
    match /woocommerce_credentials/{docId} {
      allow read, write: if isAdmin();
    }

    // App settings (for production stages) - admin can write, authenticated users can read
    match /app_settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User work logs - users can read/write their own, admin can read all, no delete (audit-safe)
    // NOTE: Since app uses Supabase auth, we allow authenticated users to read/write
    // In production, you should sync Supabase user ID with Firebase auth
    match /user_work_logs/{logId} {
      allow read: if true; // Allow all reads for now (Supabase auth users)
      allow create: if true; // Allow all creates for now (Supabase auth users)
      allow update: if false; // Logs cannot be updated (audit-safe)
      allow delete: if false; // Logs cannot be deleted (audit-safe)
    }

    // Work notes - users can read notes for their assigned orders, can write their own, admin/sales can read all
    // NOTE: Since app uses Supabase auth, we allow authenticated users to read/write
    // In production, you should sync Supabase user ID with Firebase auth
    match /work_notes/{noteId} {
      allow read: if true; // Allow all reads for now (Supabase auth users)
      allow create: if true; // Allow all creates for now (Supabase auth users)
      allow update: if true; // Allow all updates for now (Supabase auth users)
      allow delete: if false; // Notes cannot be deleted (audit-safe)
    }

    // Vendors - authenticated users can read, only admin can write
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Order sync logs - authenticated users can read, admin can write
    match /order_sync_logs/{logId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Delay reasons - authenticated users can read and create, admin can update/delete
    match /delay_reasons/{reasonId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Self-learning analytics data - authenticated users can read, admin can write
    match /analytics_learning/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
