rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Profiles - authenticated users can read all, users can write their own
    match /profiles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // User roles - authenticated users can read and write (needed for signup)
    match /user_roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Orders - authenticated users can read and create
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Order items - authenticated users can read and create
    match /order_items/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Order files - authenticated users can read and create
    match /order_files/{fileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Timeline - authenticated users can read and create
    match /timeline/{timelineId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Notifications - users can read their own, anyone can create
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.user_id;
    }
    
    // User settings - users can only access their own
    match /user_settings/{settingsId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      allow create: if isAuthenticated();
    }
  }
}
