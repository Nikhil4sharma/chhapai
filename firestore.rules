rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/user_roles/$(request.auth.uid + '_admin'));
    }
    
    // Profiles - authenticated users can read all, users can write their own, admins can write any
    match /profiles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    // User roles - authenticated users can read and write (needed for signup)
    match /user_roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Orders - authenticated users can read and create
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Order items - authenticated users can read and create
    match /order_items/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Order files - authenticated users can read and create
    match /order_files/{fileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Timeline - authenticated users can read and create
    match /timeline/{timelineId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Notifications - users can read their own, anyone can create
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.user_id;
    }
    
    // User settings - users can only access their own
    match /user_settings/{settingsId} {
      allow read: if isAuthenticated() && request.auth.uid == settingsId;
      allow create: if isAuthenticated() && request.auth.uid == settingsId && request.resource.data.user_id == settingsId;
      allow update: if isAuthenticated() && request.auth.uid == settingsId && resource.data.user_id == settingsId;
      allow delete: if isAuthenticated() && request.auth.uid == settingsId;
    }
    
    // WooCommerce credentials - admin only (highly sensitive)
    match /woocommerce_credentials/{docId} {
      allow read, write: if isAdmin();
    }

    // App settings (for production stages) - admin can write, authenticated users can read
    match /app_settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // User work logs - users can read/write their own, admin can read all, no delete (audit-safe)
    match /user_work_logs/{logId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.user_id || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if false; // Logs cannot be updated (audit-safe)
      allow delete: if false; // Logs cannot be deleted (audit-safe)
    }

    // Work notes - users can read notes for their assigned orders, can write their own, admin can read all
    match /work_notes/{noteId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.user_id || 
        isAdmin() || 
        resource.data.department == get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.department
      );
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && request.auth.uid == resource.data.user_id;
      allow delete: if false; // Notes cannot be deleted (audit-safe)
    }
  }
}
